                      <h3 style="margin-left:230px; margin-bottom:20px;">Add Coupon</h3>
                      <form action="/addCoupon" method="post">
                        <% if(typeof fieldRequired !='undefined' ){ %>
                          <b style="color: rgb(230, 24, 24); margin-left: 20px;">
                            <%= fieldRequired %>
                          </b>
                          <% } %>
                            <div class="row">
                              <div class="col-md-6">
                                <div class="form-group">
                                  <label>name</label>
                                  <input type="text" name="name" class="form-control p_input">
                                </div>
                              </div>
                              <div class="col-md-6">
                                <div class="form-group">
